<?xml version="1.0" encoding="UTF-8" ?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
        http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity
            name="JahHub\FertilizerBundle\Entity\ItemQuantity"
            table="item_quantity"
            repository-class="JahHub\FertilizerBundle\Repository\ItemQuantityRepository"
        >
        <id name="id" type="integer">
            <generator strategy="AUTO" />
        </id>
        <field name="quantity" type="decimal" />
        <many-to-one target-entity="JahHub\FertilizerBundle\Entity\Item" field="item" fetch="EAGER">
            <join-column name="item_id" referenced-column-name="id" nullable="false" on-delete="CASCADE" />
        </many-to-one>
        <many-to-one target-entity="JahHub\FertilizerBundle\Entity\Week" field="week" fetch="EAGER">
            <join-column name="week_id" referenced-column-name="id" nullable="false" on-delete="CASCADE" />
        </many-to-one>
    </entity>
</doctrine-mapping>
